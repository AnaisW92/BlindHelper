<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blindhelper">



    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application android:label="@string/app_name"
        android:icon="@drawable/logo"
        android:theme="@android:style/Theme.Holo.Light">
        <activity android:name=".FirstActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ConfigActivity"/>
        <activity android:name=".DeviceControlActivity"/>
        <activity android:name=".SearchActivity"/>
        <activity android:name=".PacketActivity"/>
        <activity android:name=".ConfigShowActivity"/>
        <activity android:name=".FilesActivity"/>
        <activity android:name=".FileOpenActivity"/>
        <!--<activity android:name=".TrackingActivity"/>-->
        <service android:name=".BluetoothLeService" android:enabled="true"/>
        <!--<service android:name=".RecordingService" android:enabled="true"/>-->
    </application>
</manifest>
